<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.tusttreatment.mapper.BasePatientMapper">
    <select id="ListPatient" resultType="com.example.tusttreatment.pojo.entity.Patient">
        SELECT * FROM patients
        where is_valid = 1
    </select>

    <update id="removePatientById" parameterType="java.lang.Object">
        UPDATE patients
        SET
            is_valid = 0
        WHERE patient_id = #{patientId}
    </update>
</mapper>
